<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_130PX"
        android:layout_marginLeft="@dimen/DIMEN_40PX"
        android:layout_marginRight="@dimen/DIMEN_40PX"
        android:layout_marginTop="@dimen/DIMEN_30PX"
        android:background="@drawable/bg_white"
        android:orientation="horizontal"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/DIMEN_130PX"
            android:layout_weight="10"
            android:background="@drawable/bg_white"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/DIMEN_20PX"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/habit_finish"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/DIMEN_24PX"
                    android:layout_marginLeft="@dimen/DIMEN_30PX"
                    android:layout_gravity="center"
                    android:src="@mipmap/habit_finished" />


                <TextView
                    android:id="@+id/sleep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/DIMEN_20PX"
                    android:text="按时睡觉"
                    android:textColor="@color/black"
                    android:textSize="@dimen/DIMEN_32PX" />


            </LinearLayout>
            <TextView
                android:id="@+id/tv_habit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/DIMEN_30PX"
                android:text="养成早睡早起的习惯，每晚0点之前睡觉"
                android:layout_marginTop="@dimen/DIMEN_10PX"
                android:textColor="@color/darkgray"
                android:textSize="@dimen/DIMEN_26PX" />

        </LinearLayout>

        <ImageView
           android:id="@+id/star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/flag_selected"
            />

    </LinearLayout>
</LinearLayout>
