<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/rc_plugins_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:background="@color/btn_answer_pressed"
        android:layout_height="@dimen/DIMEN_86PX">
        <ImageView
            android:id="@+id/image_back"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginBottom="@dimen/DIMEN_20PX"
            android:paddingLeft="@dimen/DIMEN_20PX"
            android:layout_marginTop="@dimen/DIMEN_20PX"
            android:src="@mipmap/push_back"/>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="设置邮箱"
            android:textColor="@color/white"
            android:textSize="@dimen/DIMEN_36PX"
            />
        <TextView
            android:id="@+id/collection"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/DIMEN_66PX"
            android:text="保存"
            android:layout_marginRight="@dimen/DIMEN_20PX"
            android:layout_marginTop="@dimen/DIMEN_5PX"
            android:textColor="@color/white"
            android:textSize="@dimen/DIMEN_40PX"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/llt_input"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/DIMEN_126PX"
        >

        <EditText
            android:gravity="top"
            android:padding="@dimen/DIMEN_20PX"
            android:layout_margin="@dimen/DIMEN_20PX"
            android:layout_marginTop="@dimen/DIMEN_10PX"
            android:layout_marginLeft="@dimen/DIMEN_10PX"
            android:layout_marginRight="@dimen/DIMEN_10PX"
            android:background="@drawable/bg_white"
            android:id="@+id/et_into"
            android:singleLine="false"
            android:inputType="textMultiLine"
            android:textSize="@dimen/DIMEN_25PX"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/DIMEN_28PX"
        android:gravity="center"
        android:layout_marginTop="@dimen/DIMEN_30PX"
        android:text="邮箱设置成功后无法修改"/>
</LinearLayout>
